     *
     * @param  int  $id
     * @return \Illuminate\Http\Response
     */
    public function edit($id)
    {
        

        session_start();
        if ($_SESSION["user"]==null) {

            return view('saipure.login')->with('tt','');
        }
       
        
        $User = Saipure::find($id);
        
         return view('saipure.point')->with('User',$User)->with('ttt','');


       
    }

    /**
     * Update the specified resource in storage.
     *
     * @param  \Illuminate\Http\Request  $request
     * @param  int  $id
     * @return \Illuminate\Http\Response
     */
    public function update(Request $request,$id)
    {
        session_start();
        $User = Saipure::find($id);
        if ($request->input('point')==null) {
            return view('saipure.point')->with('User',$User)->with('ttt','กรุณากรอกข้อมูล '.$request->input('point').' Point');
        }
        $update = Saipure::find($id);
        $update->Point += $request->input('point');
        $update->save();
       
        $User = Saipure::find($id);
         return view('saipure.point')->with('User',$User)->with('ttt','สำเร็จ คุณไดรับ '.$request->input('point').' Point');
    }

